{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^ghcr.io/hotio/"],
      "versioning": "regex:^release-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:\\.(?<build>\\d+))?$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["crocodilestick/calibre-web-automated"],
      "versioning": "regex:^[vV]?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-.*)?$"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^ghcr.io/immich-app/immich"],
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^docker/traefik-stack/traefik/config/traefik\\.yml$"
      ],
      "matchStrings": [
        "\\s+moduleName: \"?github\\.com\\/(?<packageName>[^\\/\"\\s]+\\/[^\\/\"\\s]+)\"?[\\r\\n\\s]+version: \"?(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)\"?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{packageName}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^docker/prod/immich/compose\\.yaml$"
      ],
      "matchStrings": [
        "ghcr\\.io/immich-app/immich-server:(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)",
        "ghcr\\.io/immich-app/immich-machine-learning:(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)-openvino"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/immich-app/immich"
    }
  ]
}
