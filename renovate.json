{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": ["docker-compose", "compose"],
      "matchDatasources": ["docker"],
      "matchFileNames": ["docker/prod/srv-unraid/immich/compose.yaml"],
      "matchPackageNames": [
        "ghcr.io/immich-app/immich-server",
        "ghcr.io/immich-app/immich-machine-learning"
      ],
      "groupName": "Immich images (server + ML)",
      "groupSlug": "immich"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["**/*.yaml", "**/*.yml", "**/*.json", "**/*.txt"],
      "matchStrings": [
        "\\s*moduleName:\\s*\"?github\\.com/(?<packageName>[\\w.-]+/[\\w.-]+)\"?[\\r\\n\\s]+version:\\s*\"?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)\"?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{packageName}}"
    }
  ]
}
